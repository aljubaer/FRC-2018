<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCEDC8"
    android:paddingTop="10dp"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#689F38"
                />

            <LinearLayout
                android:id="@+id/LL_LA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#AED581"
                android:orientation="horizontal"
                >

                <TextView
                    android:padding="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:text="Land Area"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:textAlignment="gravity"
                    android:gravity="center"
                    />

                <EditText
                    android:id="@+id/edit_area"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:maxLength="7"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:padding="10dp"
                    android:inputType="numberDecimal"
                    android:background="@drawable/back_border"
                    />

                <Spinner
                    android:id="@+id/spn_unit_land"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    >
                </Spinner>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#689F38"
                />

            <TextView
                android:id="@+id/txt_g"
                android:layout_below="@+id/LL_LA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#689F38"
                />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txt_g"
                android:stretchColumns="*"
                android:background="@drawable/back_round"
                >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Fertilizer"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="#8BC34A"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Req. Dose(kg)"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="#8BC34A"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="Cost"
                        android:textSize="16sp"
                        android:textColor="#000"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="#8BC34A"
                        />



                </TableRow>

                <View
                    android:layout_height="4dp"
                    android:layout_width="match_parent"
                    android:background="#7CB342"
                    />

                <TableRow>
                    <TextView
                        android:id="@+id/n_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Urea"
                        android:textColor="#000"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border_dark"
                        />

                    <TextView
                        android:id="@+id/n_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border"
                        />


                    <TextView
                        android:id="@+id/n_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border"
                        />



                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/p_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="DAP"
                        android:textColor="#000"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border_dark"
                        />

                    <TextView
                        android:id="@+id/p_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border"
                        />

                    <TextView
                        android:id="@+id/p_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border"
                        />


                </TableRow>


                <TableRow>
                    <TextView
                        android:id="@+id/k_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="MoP"
                        android:textColor="#000"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border_dark"
                        />
                    <TextView
                        android:id="@+id/k_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border"
                        />

                    <TextView
                        android:id="@+id/k_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border"
                        />
                </TableRow>


                <TableRow>
                    <TextView
                        android:id="@+id/s_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Gypsum"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border_dark"
                        />
                    <TextView
                        android:id="@+id/s_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border"
                        />
                    <TextView
                        android:id="@+id/s_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border"
                        />

                </TableRow>


                <TableRow>
                    <TextView
                        android:id="@+id/zn_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Zinc Sulphate Hepta"
                        android:padding="10dp"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border_dark"
                        />
                    <TextView
                        android:id="@+id/zn_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border"
                        />
                    <TextView
                        android:id="@+id/zn_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border"
                        />


                </TableRow>

                <TableRow>
                    <TextView
                        android:id="@+id/b_1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="Solubor"
                        android:textColor="#000"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border_dark"
                        />

                    <TextView
                        android:id="@+id/b_2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border"
                        />
                    <TextView
                        android:id="@+id/b_3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:background="@drawable/back_border"
                        />

                </TableRow>


            </TableLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#689F38"
                />

        </LinearLayout>


    </ScrollView>



</RelativeLayout>