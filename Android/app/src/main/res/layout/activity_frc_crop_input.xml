<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCEDC8"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="25dp"
            android:paddingBottom="25dp"
            android:layout_margin="15dp"
            android:layout_marginBottom="50dp"
            android:background="#AAAED581"
            android:id="@+id/linearLayout">

            <TextView
                android:id="@+id/txt_crop_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crop category"
                android:padding="15dp"
                android:textColor="#000"
                android:layout_marginBottom="0dp"
                android:textSize="18sp"
                android:onClick="selectCropGroup"
                android:drawableRight="@drawable/ic_arrow_drop_down"
                android:background="@drawable/back_round"
                android:focusable="true"
                />
            <TextView
                android:id="@+id/error_cropgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textSize="12sp"
                android:textColor="#FF0000"
                />

            <TextView
                android:id="@+id/txt_crop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crop / Season"
                android:padding="15dp"
                android:textColor="#000"
                android:layout_marginBottom="0dp"
                android:textSize="18sp"
                android:onClick="selectCrop"
                android:drawableRight="@drawable/ic_arrow_drop_down"
                android:background="@drawable/back_round"
                android:focusable="true"
                />
            <TextView
                android:id="@+id/error_crop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textSize="12sp"
                android:textColor="#FF0000"
                />

            <TextView
                android:id="@+id/txt_var"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crop variety"
                android:textColor="#000"
                android:padding="15dp"
                android:layout_marginBottom="0dp"
                android:textSize="18sp"
                android:onClick="selectVar"
                android:drawableRight="@drawable/ic_arrow_drop_down"
                android:background="@drawable/back_round"
                android:focusable="true"
                />
            <TextView
                android:id="@+id/error_var"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textSize="12sp"
                android:textColor="#FF0000"
                />

            <TextView
                android:id="@+id/txt_texture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texture"
                android:textColor="#000"
                android:padding="15dp"
                android:textSize="18sp"
                android:onClick="selectTexture"
                android:drawableRight="@drawable/ic_arrow_drop_down"
                android:background="@drawable/back_round"
                android:focusable="true"
                />

            <TextView
                android:id="@+id/error_texture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:textSize="12sp"
                android:textColor="#FF0000"
                />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:onClick="proceed"
                    android:text="Proceed"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:background="@drawable/back_nutrient"
                    />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>